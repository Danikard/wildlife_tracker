{{#partial "content"}}

    <body>
    <div class=" container-fluid">
        <div class="row">
            <div class="col-sm-4" id="center">
                <form action="/animal/new" method="POST" name="test">
                    <div class="form-group">
                        <label for="nameOfAnimal"> Animal Name </label><br>
                        <input id="nameOfAnimal" name="name" placeholder="Animal Name" type="text" tabindex="1" required autofocus class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="health">Health</label><br>
                        <select name="health" class="form-control">
                            <option>Sick</option>
                            <option>Not sick</option>
                            <option>Healthy</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="age">Age  </label><br>
                        <select name="age" class="form-control">
                            <option>Newborn</option>
                            <option>Young</option>
                            <option>Adult</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="rangerName">Ranger's Name:</label><br>
                        <input id="ranger_name" name="ranger_name" type="text" required class="form-control" >
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label><br>
                        <select name="location" class="form-control">
                            <option>Zone 1</option>
                            <option>Zone 2</option>
                            <option>Zone 3</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success">SUBMIT</button>
                    <br>
                </form>
            </div>
        </div>
    </div>
    </body>
{{/partial}}
{{> layout.hbs}}
